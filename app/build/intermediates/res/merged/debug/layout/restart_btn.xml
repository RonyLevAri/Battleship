<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/restart_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btnblank"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/restart_button_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:text="@string/restartGame"
        android:layout_alignStart="@+id/restart_button_image"
        android:layout_alignEnd="@+id/restart_button_image"
        android:layout_alignBottom="@+id/restart_button_image"
        android:layout_alignTop="@+id/restart_button_image"
        android:layout_centerVertical="@id/restart_button_image"
        android:gravity="center"
        />
</RelativeLayout>